<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_subtitle"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_topic"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_all_topics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_topics"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_signs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_signs"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_traffic_signals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_traffic_signals"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_pavement_markings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_pavement_markings"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_right_of_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_right_of_way"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_speed_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_speed_distance"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_parking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_parking"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_safe_driving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_safe_driving"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_special_situations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/topic_special_situations"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
